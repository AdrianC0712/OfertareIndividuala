@model OfertareIndividuala.Controllers.UserViewModel

@{
    ViewData["Title"] = "Editare utilizator UtilizatorDor2Dor";
}

<h2>Editare utilizator UtilizatorDor2Dor</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="Id_utilizator" />
    <div class="form-group">
        <label asp-for="Nume_utilizator">Email</label>
        <input asp-for="Nume_utilizator" class="form-control" />
        <span asp-validation-for="Nume_utilizator" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password_utilizator">Parolă</label>
        <input asp-for="Password_utilizator" class="form-control" type="password" />
        <span asp-validation-for="Password_utilizator" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirmă parola</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvează</button>
    <a href="@Url.Action("ManageUsers", "Admin")" class="btn btn-secondary">Anulează</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}